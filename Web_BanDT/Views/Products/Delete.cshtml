@model Web_BanDT.Models.Product


<h2>Xóa sản phẩm</h2>

<div>
    <h4>Bạn có chắc muốn xóa sản phẩm này?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Model.ProductName
        </dd>

        <dt class="col-sm-2">
            Giá
        </dt>
        <dd class="col-sm-10">
            @Model.Price.ToString("C")
        </dd>

        <dt class="col-sm-2">
            Số lượng
        </dt>
        <dd class="col-sm-10">
            @Model.StockQuantity
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Products", new { id = Model.ProductId }))
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Xóa</button>
        @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>
