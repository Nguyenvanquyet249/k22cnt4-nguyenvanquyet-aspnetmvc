@model Web_BanDT.Models.Product


<h2>Thêm sản phẩm mới</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ProductName)
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ProductName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Price)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StockQuantity)
        @Html.TextBoxFor(model => model.StockQuantity, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.StockQuantity)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CategoryId, "Danh mục")
        @Html.DropDownList("CategoryId", null, "Chọn danh mục", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
}
