<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title  Trang quản trị</title>
    <link rel="stylesheet" href="~/Content/site.css" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Trang chủ</a>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Quản lý sản phẩm", "Index", "Products")</li>
                <li>@Html.ActionLink("Thêm sản phẩm mới", "Create", "Products")</li>
            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Website Bán Điện Thoại</p>
        </footer>
    </div>
</body>
</html>
